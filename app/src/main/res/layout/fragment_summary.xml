<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SummaryFragment">

    <!-- TODO: Update blank fragment layout -->
   <TextView
       android:layout_marginTop="@dimen/dp_20"
       android:layout_below="@+id/include"
       android:id="@+id/labeled"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/sp_18"
       android:layout_marginLeft="@dimen/dp_10"
       android:textColor="@color/white"
       android:text="Your Ratings"></TextView>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_below="@+id/labeled">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"

    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery">

            </TextView>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:rating="3"
                android:theme="@style/RatingBar"

                />
        </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reliability">

        </TextView>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:rating="4"
            android:theme="@style/RatingBar"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall">
        </TextView>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:rating="5"
            android:theme="@style/RatingBar"

            />
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quality">

                </TextView>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:rating="3"
                    android:theme="@style/RatingBar"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coverage">

                </TextView>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:rating="3"
                    android:theme="@style/RatingBar"

                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall">
                </TextView>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:rating="3"
                    android:theme="@style/RatingBar"

                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_rectangle_top_corner"

            android:layout_below="@+id/lin1"
        android:layout_width="match_parent"
        android:weightSum="2"
            android:padding="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/order"
                    android:layout_width="0dp"
                    android:text="Orders"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_corner_round"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"

                    > </Button>
                <Button
                    android:layout_width="0dp"
                    android:text="Product \n Service"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_corner_round"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"

                    > </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_width="0dp"
                    android:text="Bid \n Ra"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_corner_round"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"

                    > </Button>
                <Button
                    android:layout_width="0dp"
                    android:text="Incident"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_corner_round"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"

                    > </Button>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>