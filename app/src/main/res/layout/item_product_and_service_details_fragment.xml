<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_rectangle_gray_cornor"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bid_id"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Product Id:65228"
            ></TextView>


        <View
            android:layout_below="@+id/bid_id"
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            ></View>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_5"

            android:layout_below="@+id/views"
            android:id="@+id/lin1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/product_name">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content"
                        android:text=" NoteBook Computers"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_12"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brand">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content"
                        android:text=" Acer"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="@string/mrp_ndp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content"
                        android:text=" Deepak"></TextView>
                </LinearLayout><LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Product Status">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="wrap_content"
                        android:text=" Purged"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.7"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category">

                </TextView>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="Acer"></TextView>
</LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"
                    android:text="Mode:">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"
                    android:text=" office"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"
                    android:text="@string/offer_prices">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"
                    android:text=" 400"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>