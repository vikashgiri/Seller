<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_dashboard"></include>


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/dp_10"
        android:text="@string/bid_statistics"
        android:layout_height="wrap_content">

    </TextView>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/header"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        ></View>
    <TextView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:text="@string/participation"
        android:layout_height="wrap_content">

    </TextView>
    <View
        android:layout_below="@+id/header"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        ></View>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_marginTop="@dimen/dp_10"

    android:layout_marginLeft="@dimen/dp_20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

 <TextView
     android:id="@+id/text12"
        android:layout_width="wrap_content"
     android:textSize="@dimen/dp_16"
android:textStyle="bold"
        android:text="@string/no_of_bids"
        android:layout_height="wrap_content">

    </TextView> <TextView
    android:layout_below="@+id/text12"
        android:layout_width="wrap_content"
        android:text="102"

    android:textColor="@color/orange"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>
<RelativeLayout
    android:id="@+id/rel1"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

 <TextView
     android:id="@+id/text13"
     android:layout_marginTop="@dimen/dp_10"

     android:layout_width="wrap_content"
     android:textSize="@dimen/dp_16"
android:textStyle="bold"
     android:text="Value"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
    android:layout_below="@+id/text13"
        android:layout_width="wrap_content"
        android:text="102 Cr"
    android:textColor="@color/orange"

    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>
        <View
            android:layout_below="@+id/rel1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            ></View>
    </RelativeLayout>
    <TextView
android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid lost"
        android:textSize="@dimen/sp_18"

        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_30"
            android:rotation="90"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_height="@dimen/dp_30">

        </ImageView>

        <EditText
            android:id="@+id/textView1"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:text="@string/recent"
android:layout_centerVertical="true"
            android:backgroundTint="@color/orange"
android:editable="false"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:focusable="false"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:layout_toRightOf="@+id/textView1"
            android:layout_centerVertical="true"

            android:id="@+id/textView2"
android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:text="@string/categories"
android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView><TextView
        android:layout_toRightOf="@+id/textView2"
android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
            android:text="@string/bid_comparision"
android:textStyle="bold"
        android:id="@+id/textView3"

        android:layout_height="wrap_content">

        </TextView>
        <ImageView
android:layout_alignParentRight="true"            android:layout_width="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:rotation="270"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_height="@dimen/dp_30">

        </ImageView>
    </RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:src="@drawable/graph">

</ImageView>
</LinearLayout>
</layout>
