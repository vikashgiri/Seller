<?xml version="1.0" encoding="utf-8"?>
<layout><RelativeLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_dashboard">

    </include>
    <RelativeLayout
        android:id="@+id/rel1"

        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id"
            android:textSize="@dimen/sp_13"

            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:text="Contract #GEM23433453"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_10"
            android:padding="@dimen/dp_2"
            android:layout_toRightOf="@+id/id"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/ic_button_background"
            android:text="@string/order_accepted"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_10"
            android:padding="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/ic_button_background"
            android:text="@string/download_contract"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:textSize="@dimen/sp_13"
            android:id="@+id/text"
            android:layout_below="@+id/id"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:text="@string/contract_date"
            android:layout_height="wrap_content">

        </TextView>    <TextView
        android:textSize="@dimen/sp_13"

        android:layout_toRightOf="@+id/text"
        android:layout_below="@+id/id"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:text="20-03-2020"
        android:layout_height="wrap_content">

    </TextView>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:background="@color/dark_gray"
            android:layout_height="@dimen/dp_05">

        </View>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView                    android:textSize="@dimen/sp_13"

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="Buyer:Amit Kumar Singh"
                android:layout_height="wrap_content">
            </TextView>



            <TextView
                android:layout_below="@+id/id"
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:text="Department:Bbarat petroleam Corporation Ltd"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_below="@+id/id"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text="Location served based"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:text="@string/total_order_valuess"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" 20"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/no_of_consignee"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:textSize="@dimen/sp_13"
                       android:layout_width="wrap_content"
                    android:text=" 20"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/quantity"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:textSize="@dimen/sp_13"
                       android:layout_width="wrap_content"
                    android:text=" 3nos"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/view"
        android:layout_below="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/dark_gray">

    </View>
    <LinearLayout
        android:id="@+id/lin3"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.3"

            android:paddingLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60">

            </ImageView>



            <TextView
                android:textSize="@dimen/sp_13"

                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_2"
                 android:layout_width="wrap_content"
                android:text="Acer Laptop"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/unit_price"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                       android:layout_width="wrap_content"
                    android:text=" 20"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/total_quantity"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" 20"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/total_value"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" 5000"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/view2"

        android:layout_below="@+id/lin3"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05">

    </View>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/view2"
        android:paddingLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView                    android:textSize="@dimen/sp_13"

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="Consignee:Amit Kumar Singh"
                android:layout_height="wrap_content">
            </TextView>



            <TextView                    android:textSize="@dimen/sp_13"

                android:layout_below="@+id/id"
                   android:layout_width="wrap_content"
                android:text="Bharti petroleam Corporation Ltd"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_13"
                    android:layout_width="wrap_content"
                    android:text="Quantity Dispatched:"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" 20"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:textSize="@dimen/sp_13"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="@string/location"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" Delhi"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="Invoice:"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView
                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="N/A"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text="Expcted Delivery Date:"
                    android:layout_height="wrap_content">
                </TextView>


                <TextView                    android:textSize="@dimen/sp_13"

                    android:layout_width="wrap_content"
                    android:text=" 20-05-2020"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</layout>