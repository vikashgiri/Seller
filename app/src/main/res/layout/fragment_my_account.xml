<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_dashboard">
    </include>

    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/toolbar"
        android:layout_width="@dimen/dp_60"
        android:src="@drawable/profile"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_60">
    </ImageView>

    <TextView
    android:id="@+id/name"
    android:layout_below="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
    android:textColor="@color/white"
    android:text="Vikash Kumar Giri">
    </TextView>
    <TextView
        android:id="@+id/email"
        android:layout_below="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:gravity="center"
        android:textColor="@color/white"
    android:text="Vikash.Kumar@gmail.com"></TextView>
    <TextView
        android:id="@+id/company_name"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="N K JAIN INSTRUMENT PVT LTD"></TextView>
    <RelativeLayout
        android:layout_below="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_rectangle_white"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:text="@string/company_profile"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">

        </TextView>
<View
    android:id="@+id/view"
    android:layout_below="@+id/text"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_1"
    >

</View>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/lin1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/view"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/business_organisation_ntype">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:text="Company">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_below="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/business_organisation_nname">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:text="N K Jain Instruments Pvt Ltd">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_below="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date Of Incorporation">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:text="09/01/1992">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_below="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Are you a Startup">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:text="Yes">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_below="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Are you registered with MSME as a Micro or Small Enterprise?">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Yes">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin6"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Do you want to participate in Bid?">

            </TextView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"

                android:layout_width="0dp"
                android:layout_height="wrap_content">


            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes">

            </RadioButton>
            <RadioButton
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No">
                            </RadioButton>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin7"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_below="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enterprise?">

            </TextView>
            <RelativeLayout
                android:layout_weight="1"

                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:textColor="@color/white"
                android:background="@drawable/ic_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save">
            </TextView>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
</layout>